%div(ng-controller='AuthorsCtrl')
  %form.form-horizontal(ng-submit='createAuthor()' ng-show='showForm' role='form')
    .row
      .col-md-6
        .form-group
          %label.col-lg-2.control-label(for='title') Titre
          .col-lg-10
            %input.form-control(id='title' type='text' ng-model='book.title' required)

  = render 'books/author'

  .row
    .col-lg-4.col-md-offset-8
      .form-horizontal
        .form-group 
          .col-lg-12  
            %input.form-control(type="text" ng-model="filterOptions.filterText" id="search" placeholder="Recherche")
  .row
    .col-lg-12
      .grid(ng-grid="gridOptions")